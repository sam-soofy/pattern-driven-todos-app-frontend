{
  "name": "pattern-driven-todos-app-frontend",
  "version": "1.2.1",
  "description": "A todo list application demonstrating JavaScript/TypeScript design patterns with reusable Tailwind component system",
  "type": "module",
  "scripts": {
    "dev": "npm run build:css & serve src",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --watch",
    "build:css:prod": "tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --minify",
    "docs:generate": "jsdoc -c jsdoc.json",
    "docs:md": "documentation build src/js/** -f md -o DOCUMENTATION.md",
    "serve": "serve src",
    "release:patch": "pnpm version patch && git push --follow-tags",
    "release:minor": "pnpm version minor && git push --follow-tags",
    "release:major": "pnpm version major && git push --follow-tags"
  },
  "keywords": [
    "todo",
    "design-patterns",
    "singleton",
    "observer",
    "value-object",
    "vanilla-js"
  ],
  "author": "sam-soofy (https://github.com/sam-soofy)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "documentation": "^14.0.3",
    "jsdoc": "^4.0.4",
    "postcss": "^8.4.49",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.17"
  }
}
